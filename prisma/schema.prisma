generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}

model User {
  id Int @id @default(autoincrement())
  username String
  password String
  email String
  fullName String
  createdAt DateTime
  dp String // Cloudinary URL

  @@map("users")

}

model Post {
  id Int @id @default(autoincrement())
  title String
  createdAt DateTime
  updatedAt DateTime
  author //or authors?
  content // ?? string + images 
  image //or images thumbnail?
  comments
  status //published or not

  @@map("posts")
}

model Comment {
  id Int @id @default(autoincrement())
  author // whatever details we need, can be extracted from User model
  createdAt DateTime
  updatedAt // decide if i want to allow editing a comment
  numberOfLikes // really? should i put these too?
  numberOfDislikes
  replies // oh gosh no!!
  content  String// the main content of the comment 

  @@map("comments")

}




